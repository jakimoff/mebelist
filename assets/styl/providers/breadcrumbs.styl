.breadcrumbs
  padding 16px 0 12px
  width 100%
  display flex
  justify-content flex-start
  align-items center
  &--wrap
    width 100%
  &__link, &__page
    color blackText
    opacity .5
  &__item
    @media $md-and-smaller
      display none
  &__last
    @media $md-and-smaller
      display none
  &__link
    transition()
    position relative
    &:hover
      opacity 1
      color accentColor
    &::after
      margin 0 3px
      content "â€”"
      font-size 14px
      color blackText
      opacity .5
  &__mobile
    @media $md-and-smaller
      display inline-block
      .breadcrumbs__link
        display inline-block
        &::after
          content none
        &::before
          margin: 0 10px 0 0;
          content: "<";
          font-size: 14px;
          color: #333;
          opacity: 0.5;
