.filter-mobile
  size(100%, 100vh)
  position fixed
  top 0
  left 0
  z-index 999
  background-color white
  transition()
  transform translateX(-140%)
  &--wrap
    width 100%
  &--active
    transform translate(0)
  &__head
    padding 0 28px 0 17px
    size(100%, 70px)
    display flex
    justify-content space-between
    align-items center
    border-bottom 1px solid rgba(0,0,0,.1)
  &__main
    width 100%
    height calc(100% - 160px)
    overflow-y auto
  &__btn
    size(100%, 90px)
    padding 0 17px
    display flex
    justify-content space-between
    align-items center
    border-top 1px solid rgba(0,0,0,.1)
  &__list
    width 100%
    padding-bottom 15px
  &__item
    width 100%
    padding 0 17px
  &__link
    size(100%, 50px)
    display flex
    justify-content space-between
    align-items center
    color blackText
    border-bottom 1px solid rgba(0,0,0,.1)
    &:hover
      color blackText
    svg
      size(10px)
      opacity .35
      transform rotate(-180deg)
  &__main
    width 100%
    padding 20px
  &__box
    width 100%
    height 100vh
    overflow-y auto
    overflow-x hidden
    position fixed
    top 0
    left 0
    z-index 9999
    background white
    transform translateX(-140%)
    transition()
    .filter-mobile__main
      height calc(100vh - 70px)
    .scroll-main
      padding-top 0
      height calc(100vh - 260px)
      .checked
        padding-bottom 0
      &--btn
        width 100%
        display flex
        justify-content space-between
        align-items center
        padding 10px 20px
        background white
        border-top 1px solid rgba(0,0,0,.1)
        position absolute
        bottom 0
        left 0
      &--reset
        height: auto
        padding-bottom 0
        .checked
          padding-bottom 0
    .search
      margin-bottom 30px
      width 100%
      max-width 100%
      &__input
        padding 0 20px 0 40px
      &__submit
        right initial
        top 50%
        left 14px
        transform translateY(-50%)
        background none
        border none
        size(15px)
        svg
          fill black
      &--wrap
        width 100%
    .filter-mobile__title
      width max-content
      display flex
      justify-content flex-start
      align-items center
      cursor pointer
      &::before
        margin-right 10px
        content ""
        size(20px)
        opacity .5
        background url("~static/img/svg/arrow-right.svg") no-repeat center center
        background-size contain
  &__box:not(:first-child)
    display block
  &__submain
    width: 100%
    padding 20px
