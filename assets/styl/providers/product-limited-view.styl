.product-limited
  width 100%
  border-radius 8px
  background-color white
  overflow hidden
  margin-bottom 32px
  @media $xs-and-smaller
    margin-bottom 24px
  .product
    border-radius 0
    display none
    background linear-gradient(157.73deg, #F2D8FF 0%, #ACE1FF 100%)
    margin-bottom 0!important
    @media $xs-and-smaller
      display flex
      flex-direction column
      padding 0 3px 3px
      &:hover .product__photo
        border-radius 0!important
      &__photo
        border-radius 0!important
  &__head
    padding 0 20px
    size(100%, 44px)
    display flex
    justify-content flex-start
    align-items center
    background linear-gradient(157.73deg, #F2D8FF 0%, #ACE1FF 100%)
  &__sub
    color blackText
    font-weight 600
  &__main
    padding 18px 20px 18px
    display flex
    flex-wrap wrap
    @media $xl-and-smaller
      padding 18px 20px 22px
    @media $lg-and-smaller
      padding 18px 20px 18px
    @media $xs-and-smaller
      display none
  &__tabs
    width 40%
  &__info
    width 60%
    padding-left 20px
  &__images
    width 100%
  &__photo
    size(100%, 188px)
    border-radius 8px
    overflow hidden
    div
      height 100%
  &__image
    size(100%)
    display block
  &__img
    size(100%)
    object-fit cover
    object-position center center
  &__controls
    padding-top 20px
    width 100%
    display flex
    justify-content space-between
    align-items flex-start
  &__btn
    padding 0
    width 29%
    height 54px
    display flex
    justify-content center
    align-items center
    border-radius 8px
    overflow hidden
    background none
    border none
  &__title
    color blackText
  &__pricing
    padding 16px 0
    border-bottom 1px solid rgba(0,0,0,.1)
    width 100%
    display flex
    justify-content flex-start
    align-items center
  &__price
    font-weight bold
    color black
    margin-right 16px
    text-transform uppercase
    &--old
      color #B7BABD
      text-transform uppercase
      text-decoration line-through
      font-weight bold
  &__list
    padding-top 16px
    width 100%
  &__item
    width 100%
    display flex
    line-height 1.7
    @media $xl-and-smaller
      line-height 1.45
  &__key
    width 50%
    font-weight 600
    color blackText
  &__value
    width 50%
    color blackText
    opacity .5
  &__review
    padding-left 16px
    width 100%
    display flex
    justify-content flex-start
    align-items center
    color blackText
    svg
      size(15px)
      fill #FFC700
  &__foot
    width 100%
    padding 0 20px 26px
    padding-top: 8px
    @media $xs-and-smaller
      display none
  &__fix
    padding-top 20px
    width 100%
    display flex
    justify-content space-between
    align-items center
    border-top 1px solid rgba(0,0,0,.1)
  &__user
    width max-content
    display flex
    justify-content flex-start
    align-items center
  &__logo
    size(38px)
    min-height 38px
    min-width 38px
    display block
    border-radius 50%
  &__nav
    display flex
    justify-content flex-end
    align-items center
    .btn_icon
      margin-left 16px
