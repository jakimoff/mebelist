.category
  width 100%
  padding-bottom 20px

.catalog-product
  width 100%
  display flex
  flex-direction column
  justify-content flex-start
  align-items flex-start

.product
  &__sale
    margin-right 10px
    width max-content
    height 28px
    padding 0 5px
    display flex
    justify-content center
    align-items center
    color white
    background #E53A58
    border-radius 4px
  &__new
    margin-right 10px
    width max-content
    height 28px
    padding 0 8px
    display flex
    justify-content center
    align-items center
    color white
    background accentColor
    border-radius 4px
