.banner-full
  position relative
  padding 0 44px
  margin 66px auto 40px
  width 100%
  max-width 1180px
  height 120px
  display flex
  justify-content flex-start
  align-items center
  border-radius 8px
  background linear-gradient(147.38deg, #FFDCD8 0%, #FFEDAC 100%)
  @media $md-and-smaller
    padding 0 32px
    margin 20px 0 0
  @media $sm-and-smaller
    flex-direction column-reverse
    height auto
    padding 20px
    text-align center
  &__info
    padding-left 82px
    display flex
    flex-direction column
    justify-content center
    align-items flex-start
    color blackText
    @media $lg-and-smaller
      padding-left 32px
      max-width 300px
    @media $md-and-smaller
      max-width max-content
    @media $sm-and-smaller
      padding-left 0
      padding-bottom 20px
      text-align center
  &__title
    padding-bottom 5px
    @media $sm-and-smaller
      width 100%
      text-align center
  &__bg
    size(381px, 238px)
    position absolute
    top 5%
    right 15px
    transform translateY(-50%)
    @media $md-and-smaller
      display none
  &__image
    size(100%)
    display block
  &__img
    size(100%)

.col-xl-9
  .banner-full
    &__bg
      @media $xl-and-smaller
        display none
