.welcome
	width 100%
	padding 32px 0 40px
	display flex
	flex-wrap wrap
	@media $xs-and-smaller
		padding 28px 0
	&--wrap
		width 100%
		.btn_slider
			@media $md-and-smaller
				display none
		.swiper-container
			padding-bottom 25px
	&__slider
		width 67%
		@media $lg-and-smaller
			width 100%
	&__links
		padding-left 20px
		width 33%
		display flex
		flex-direction column
		justify-content flex-start
		align-items flex-start
		@media $lg-and-smaller
			padding-top 32px
			width 100%
			padding-left 0
			flex-direction row
			justify-content space-between
		@media $sm-and-smaller
			flex-direction column
			justify-content flex-start
	&_slide
		position relative
		padding 0 80px
		size(100%, 414px)
		overflow hidden
		border-radius 8px
		@media $md-and-smaller
			padding 80px 40px
			height auto
		@media $sm-and-smaller
			padding 40px 20px 30px
		&__bg
			position absolute
			top 0
			left 0
			size(100%)
			z-index 1
			&::before
				content ""
				position absolute
				top 0
				left 0
				right 0
				bottom 0
				background-color rgba(0,0,0,.3)
		&__image
			size(100%)
			display block
		&__img
			size(100%)
			object-fit cover
			object-position center center
		&__info
			max-width 532px
			size(100%)
			display flex
			flex-direction column
			justify-content center
			align-items flex-start
			position relative
			z-index 2
			color white
		&__text
			padding 24px 0 50px
			@media $sm-and-smaller
				padding 16px 0 120px
		.btn_global
			@media $sm-and-smaller
				width 100%
				background-color accentColor
				color white
				font-size 16px

.link-banner
	position relative
	size(100%, 197px)
	padding 24px 20px
	display flex
	flex-direction column
	justify-content space-between
	align-items flex-start
	border-radius 8px
	overflow hidden
	@media $lg-and-smaller
		width 48%
	@media $sm-and-smaller
		width 100%
	&__head
		width 100%
		max-width 240px
		position relative
		z-index 2
		@media $xl-and-smaller
			max-width 55%
	&__title
		padding-bottom 8px
	&__this
		font-weight bold
		color accentColor
		transition()
		position relative
		z-index 2
		&:hover
			transform translateX(7px)
			color accentColor
	&__image
		height 100%
		display block
	&__img
		height 100%
	&__bg
		height 100%
		position absolute
		right 0
		top 0
		z-index 1

.swiper-wrapper .swiper-container-horizontal .swiper-pagination
	bottom: -25px
.swiper-wrapper .swiper-container-horizontal .swiper-pagination-bullet
	size(10px)
	opacity 1
	transition()
	background #BDBDBD
	&:hover
		opacity .5
.swiper-wrapper .swiper-container-horizontal .swiper-pagination-bullet-active
	background black
	&:hover
		opacity 1

.orange
	background linear-gradient(109.71deg, #FFDCD8 0%, #FFEDAC 100%)
	margin-bottom 20px

.purple
	background linear-gradient(109.71deg, #F2D8FF 0%, #ACE1FF 100%)
