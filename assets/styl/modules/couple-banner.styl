.proposition
  padding 40px 0
  width 100%
  display flex
  justify-content center
  align-items flex-start
  flex-wrap wrap
  @media $lg-and-smaller
    padding 40px 0 20px
  @media $xs-and-smaller
    padding 28px 0
  &--wrap
    width 100%
  .link-banner
    padding 34px 40px
    width 100%
    max-width 580px
    height 220px
    margin 0 10px
    box-shadow none
    background linear-gradient(180deg, #E9EBEC 0%, #F2F3F5 38.54%, #F2F3F7 100%)
    @media $xl-and-smaller
      max-width 48%
      margin-bottom 20px
    @media $lg-and-smaller
      max-width 47%
    @media $md-and-smaller
      max-width 100%
      margin 0
      margin-bottom 20px
    @media $xs-and-smaller
      height auto
    &__head
      max-width 300px
      @media $xs-and-smaller
        width 100%
        padding-bottom 20px
    &__bg
      right 25px
      top 50%
      transform translateY(-50%)
      height 85%
      @media $lg-and-smaller
        display none
      @media $md-and-smaller
        display block
      @media $sm-and-smaller
        height 50%
      @media $xs-and-smaller
        display none
.link-banner
  position relative
  size(100%, 197px)
  padding 24px 20px
  display flex
  flex-direction column
  justify-content space-between
  align-items flex-start
  border-radius 8px
  overflow hidden
  @media $lg-and-smaller
    width 48%
  @media $sm-and-smaller
    width 100%
  &__head
    width 100%
    max-width 240px
    position relative
    z-index 2
    @media $xl-and-smaller
      max-width 55%
  &__title
    padding-bottom 8px
  &__this
    font-weight bold
    color accentColor
    transition()
    position relative
    z-index 2
    &:hover
      transform translateX(7px)
      color accentColor
  &__image
    height 100%
    display block
  &__img
    height 100%
  &__bg
    height 100%
    position absolute
    right 0
    top 0
    z-index 1
