.about
  padding 50px 100px 72px
  width 100%
  display flex
  flex-wrap wrap
  @media $xl-and-smaller
    padding 50px 0 72px
  @media $md-and-smaller
    padding-top 0
  @media $sm-and-smaller
    padding-bottom 58px
  &--wrap
    width 100%
    background-color white
  &__photo
    width 60%
    @media $md-and-smaller
      width 100%
  &__info
    width 40%
    padding-right 100px
    @media $xl-and-smaller
      padding-right 0
    @media $md-and-smaller
      width 100%
  &__image
    width 100%
    display block
  &__img
    width 100%
  &__list
    width 100%
  &__item
    padding-bottom 40px
    width 100%
    display flex
    color blackText
  &__num
    size(36px)
    background rgba(163, 188, 210, 0.2)
    border-radius 4px
    display flex
    justify-content center
    align-items center
    font-weight 600
    color black
  &__content
    padding-left 20px
    width calc(100% - 36px)
  &__title
    padding-bottom 12px
  &__btn
    padding-top 40px
    width 100%
    @media $sm-and-smaller
      padding-top 0
    .btn_more
      margin initial
      svg
        transform rotate(-180deg)
