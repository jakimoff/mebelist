.aside-page
  &__aside
    padding-top 20px
    width 100%
  &__content
    width 100%
  .category
    padding-top 60px
  .recommended-category
    position relative
    .product
      margin-bottom 0
      &:hover .product__photo
        border-radius 8px 8px 0 0
      &:hover
        width 100%
        position absolute
        top: 0
        left: 0
        padding 0
        box-shadow none
    .swiper-container
      padding-bottom 80px
    .btn_slider
      left -20px
    .btn_next
      left initial
      right -20px
  .banner-full
    margin-top 20px
    margin-bottom 0
    &__info
      padding-left 32px

.title-category
  width 100%
  padding-bottom 10px
  @media $lg-and-smaller
    padding 30px 0 50px
  &--wrap
    width 100%
    border-bottom 1px solid rgba(163, 188, 210, 0.2)
    @media $lg-and-smaller
      border-bottom none

.catalog-sub
  @extend .catalog-product
  &__title
    padding 0
  &__sub
    padding-left 20px
  &__list
    margin-bottom 32px
    padding-bottom 24px
    padding-left 40px
    border-bottom 1px solid rgba(163, 188, 210, 0.2)
  &__link
    line-height 2.4
    color blackText
    opacity .5
    &:hover
      opacity 1

.list-result
  padding-left 0
  a
    color #252525
    opacity 1

.banner-inner
  width 100%
  padding 40px 0
  @media $sm-and-smaller
    padding 0 0 32px

.filter
  width 100%
  padding-bottom 24px
  margin-bottom 32px
  border-bottom 1px solid rgba(163, 188, 210, 0.2)
  &__head
    padding-bottom 20px
    width 100%
    display flex
    justify-content space-between
    align-items center
  &__sub
    font-weight bold
    color blackText
  &__reset
    padding 0
    background none
    border none
    text-decoration underline
    font-weight bold
    color blackText
    &:hover
      text-decoration initial
  &__main
    width 100%
    display flex
    flex-wrap wrap
