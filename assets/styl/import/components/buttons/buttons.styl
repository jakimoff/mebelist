  color blackText
  &__close
    size(10px)
    padding 0
    display flex
    justify-content center
    align-items center
    background none
    border none
    margin-left 6px
    transition()
    &:hover
      transform rotate(-90deg)
    svg
      size(100%)
      fill blackText

