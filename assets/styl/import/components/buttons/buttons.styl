.btn_global
  width max-content
  padding 0 20px
  height 44px
  display flex
  justify-content center
  align-items center
  border-radius 8px
  background-color accentColor
  color white
  border none
  cursor pointer
  font-weight bold
  transition()
  span
    transition()
  &:hover
    color white
    background-color accentHoverColor

.btn_white
  background white
  color blackText
  &:hover
    color accentColor

.btn_gray
  background #F6F6F6
  border 1px solid #ECECEC
  color blackText
  &:hover
    color blackText

.btn_more
  @extend .btn_global
  margin 0 auto
  &:hover
    background-color accentHoverColor
  svg
    size(10px)
    margin-left 10px
    fill white
    transform rotate(-90deg)


.btn_location
  margin-left 53px
  padding 0
  display flex
  justify-content flex-start
  align-items center
  color black
  border none
  background none
  span
    border-bottom 1px dashed black
  svg
    margin-left 8px
    size(15px)
    fill black

.btn_declaration
  padding 0
  size(194px, 36px)
  background #F6F6F6
  border 1px solid #ECECEC
  border-radius 8px
  font-weight 600
  color accentColor

.btn_catalog
  padding 0
  size(189px, 44px)
  display flex
  justify-content center
  align-items center
  background accentColor
  border none
  border-radius 8px
  font-weight 600
  color white
  transition()
  &:hover
    background-color accentHoverColor
  svg
    margin-right 11px
    size(18px, 12px)
    fill white

.btn_text
  padding 0
  display flex
  justify-content center
  align-items center
  color black
  font-weight 600
  background none
  border none
  transition()
  &:hover
    color accentColor
  svg
    margin-right 9.25px
    size(20px)
    transition()

.btn_popular
  svg
    fill #FF7081
    @media $lg-and-smaller
      fill graySecondary

.btn_profile
  margin-left 24px
  svg
    fill graySecondary

.btn_nav
  svg
    fill graySecondary

.btn_slider
  position absolute
  top 50%
  left 15px
  transform translateY(-50%)
  padding 0
  size(40px)
  display flex
  justify-content center
  align-items center
  border-radius 50%
  background rgba(0,0,0,.5)
  border none
  transition()
  z-index 10

  svg
    size(15px)
    fill white

.btn_next
  left initial
  right 15px
  svg
    transform rotate(-180deg)

.btn_icon
  padding 0
  size(44px)
  display flex
  justify-content center
  align-items center
  background: #F6F6F6
  border: 1px solid #ECECEC
  border-radius: 8px
  svg
    size(20px)
    fill graySecondary
    transition()

.btn_favorite.btn_icon--active
  svg
    fill #ff7081

.btn_ask.btn_icon--active
  svg
    fill accentColor


.checked
  padding-bottom 32px
  width 100%
  display flex
  flex-direction column
  justify-content flex-start
  align-items flex-start
  &__sub
    font-weight bold
    padding-bottom 15px
  &__label
    width 100%
    padding-bottom 10px
  &__this
    width max-content
    padding 0 0 0 26px
    background none
    border none
    text-align left
    color blackText
    transition()
    position relative
    &:hover
      color accentColor
    &::before
      content ""
      position absolute
      top 0
      left 0
      size(18px)
      border-radius 4px
      background-color white
      border 1px solid #BDBDBD
      transition()
    &::after
      opacity 0
      content ""
      position absolute
      top 3.3px
      left 3px
      size(11px)
      background url("~static/img/svg/tick.svg") no-repeat center center
      background-size contain
      z-index 2
      transition()
  &--active
    &::before
      border-color accentColor
      background-color accentColor
    &::after
      opacity 1

.colors
  padding-bottom 32px
  width 100%
  display flex
  flex-direction column
  justify-content flex-start
  align-items flex-start
  &__sub
    font-weight bold
    padding-bottom 15px
  &__label
    width 100%
    padding-bottom 10px
    display flex
    justify-content flex-start
    align-items flex-start
    flex-wrap wrap
  &__this
    padding 0
    size(24px)
    margin-right 10px
    border-radius 4px
    border none
    position relative
    &::before
      opacity 0
      content ""
      absolute-center()
      size(28px)
      border 1px solid accentColor
      border-radius 4px
      transition()
  &--active
    &::before
      opacity 1


.color-gray
  background-color #808080

.color-brown
  background-color #954B10

.color-blue
  background-color #48ACFC

.color-pink
  background-color #F924BE

.inputs
  padding-bottom 32px
  width 100%
  display flex
  flex-direction column
  justify-content flex-start
  align-items flex-start
  &__sub
    font-weight bold
    padding-bottom 15px
  &__label
    width 100%
    padding-bottom 10px
    display flex
    justify-content space-between
    align-items flex-start
    flex-wrap wrap
  &__item
    width 47%
  &__this::placeholder
    color blackText
    opacity .5
  &__this
    padding 0 16px
    size(100%, 44px)
    background white
    transition()
    border 1px solid #BDBDBD
    border-radius 8px
    color blackText
  &__this:focus
    border 1px solid #6360FF


input[type=number]::-webkit-outer-spin-button,
input[type=number]::-webkit-inner-spin-button {
  -webkit-appearance: none;
  margin: 0;
}

input[type=number] {
  -moz-appearance:textfield; /* Firefox */
}

.tag
  padding 3px 6px
  width max-content
  display flex
  justify-content flex-start
  align-items center
  margin-bottom 8px
  margin-right 8px
  background-color #CEE2FF
