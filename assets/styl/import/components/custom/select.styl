.select-gl.only_mobile
  display none
  @media $md-and-smaller
    display flex
.select-gl
  width max-content
  &--icon
    .select-gl
      &__list
        border-color gray
      &__this
        width 280px
      &__value
        transition()
        padding 0 30px 0 10px
        justify-content flex-start
        background white
        font-weight 300
        color gray
        border-color gray
      &__item
        font-weight 300
        &:hover
          background-color #F8F8F8
      &__drop
        right 10px
      &__icon
        size(15px)
        fill gray
        margin-right 7px
  &__this
    width max-content
    min-width 290px
    position relative
  &__value
    position relative
    padding 0 42px 0 16px
    size(100%, 44px)
    display flex
    justify-content flex-start
    align-items center
    border 1px solid #BDBDBD
    background-color white
    border-radius 8px
    color blackText
    b
      margin-right 5px
      font-weight normal
      color blackText
      opacity .5
  &__drop
    size(10px)
    fill #5F5F5F
    position absolute
    right 15px
    top 18px
    transition()
  &__list
    padding 10px 0
    overflow hidden
    //display none
    width 100%
    position absolute
    top calc(100% + 2px)
    left 0
    border-radius 8px
    border 1px solid #BDBDBD
    background white
    z-index 15
  &__item
    padding 0 15px
    width 100%
    height 30px
    display flex
    justify-content flex-start
    align-items center
    cursor pointer
    transition()
    color blackText
  .icons-js
    svg
      size(15px)
      fill gray
      margin-right 7px
      transition()
  .selected
    color accentColor
    svg
      fill white
  .select__active
    border-color accentColor
    .select-gl__drop
      transform rotate(-180deg)
