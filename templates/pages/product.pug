    .row.justify-content-center
      .col-xl-8.col-lg-12.col-md-12.col-sm-12.col-xs-12
        .detailed--main
          .detailed--wrap
            .detailed
              ._mobile
                .detailed-info.mobile
                  ._head
                    ._btn
                      span._sale.text_14(v-if="detailer.sale")
                        | {{ detailer.sale }}
                      span._new.text_14(v-if="detailer.new")
                        | новинка
                      span._last.text_14(v-if="detailer.upper")
                        | Поднятое обьявление
                    ._see(v-if="detailer.watches")
                      span.see.text_14
                        Icon(:svg="`eye`")
                        | {{ detailer.watches }}
              ._nav(v-if="images")
                ul._list
                  li._item(v-for="(item, key) in images")
                    button(type="button" name="slideBtn" @click="slideTo(key)" :class="{'slide--active' : key === current_slide }")._btn
                      Img(:link="item.src" :alt="item.alt" :parent="`detailed-sm`")
              ._slider(v-if="images")
                Swiper(
                  :options="swiperOptions"
                  @slideChange="slideChange"
                  ref="swiperTop"
                  class="swiper")
                  SwiperSlide(v-for="(item, key) in images" :key="key")
                    .detailed-slide(data-swiper-parallax-opacity="0")
                      Img(:link="item.src" :alt="item.alt" :parent="`detailed-slide`")
                  button(type="button" name="prev" @click="btnNav(false, $event)").btn_slider.btn_prev
                    Icon(:svg="`arrow-left`")
                  button(type="button" name="next" @click="btnNav(true, $event)").btn_slider.btn_next
                    Icon(:svg="`arrow-left`")
                .swiper-pagination.swiper-pagination-clickable.swiper-pagination-bullets
              ._mobile
                .detailed-info.mobile
                  ._main
                    ._num
                      span.text_14
                        | № {{ detailer.num }}
                      span.text_14
                        | {{ detailer.publish_date }}
                    ._price
                      span.title_32
                        | {{ detailer.price }} ₽
                      ._fix
                        ._item(v-if="detailer.old_price")
                          span._sub.text_12
                            | Старая цена
                          span._price--old.text_14
                            | {{ detailer.old_price }} ₽
                        ._item(v-if="detailer.benefit")
